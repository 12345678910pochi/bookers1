<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>books</title>
</head>
<body>
	<p id="re_delete">Book was successfully destroyed.</p>
	<main id="body_new">
		<span id="main_new"><h1>Books</h1></span>

		<table id="table_new">
			<thead>
				<tr align="center">
					<th>Title</th>
					<th>Body</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody align="left">

				<% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to "Show", book_path(book) %></td>
					<td><%= link_to "Edit", edit_book_path(book) %></td>
					<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?"%></td>
				</tr>
				<% end %>


			</tbody>
		</table>

		<span id="sub_new"><h3>New book</h3></span>
		
		<div id="submit_new">
			<%= form_for(@book) do |post| %>
			<label for="book_title">Title</label>
			<div id="post_title"><%= post.text_field :title %></div>
			<label for="book_body">Body</label>
			<div id="post_body"><%= post.text_area :body %></div>
			<div><%= post.submit "Create Box" %></div>
			<% end %>
		</div>

	</main>
</body>
</html>